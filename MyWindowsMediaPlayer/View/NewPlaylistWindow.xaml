<Window x:Class="MyWindowsMediaPlayer.View.NewPlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewPlaylistWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextNamePlaylist" Grid.Row="0" Margin="100,5,10,5"/>
        <Button Content="Selectionner les fichiers" Click="LookForFiles" Grid.Row="1" Margin="50,5,50,5"/>
        <ListBox x:Name="ListFilesPlaylist" Grid.Row="2" Margin="10"/>
        <Button Content="Creer" Click="CreatePlaylist" Grid.Row="3" Width="60" Margin="82,1,150,1"/>
        <Button Content="Annuler" Click="ButtonCancel" Grid.Row="3" Width="60" Margin="150,1,82,1"/>
    </Grid>
</Window>
