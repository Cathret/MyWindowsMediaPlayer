<Window x:Class="MyWindowsMediaPlayer.View.PlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Playlists" Height="320" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <ListBox x:Name="ListPlaylist" Margin="10,10,10,5" Grid.Row="0" BorderThickness="2"/>
        <Button Content="Selectionner" Height="30" Width="80" Click="SelectPlaylist" Grid.Row="1" Margin="0,0,90,0" IsEnabled="False"/>
        <Button Content="Annuler" Height="30" Width="80" Click="ButtonCancel" Grid.Row="1" Margin="90,0,0,0"/>
    </Grid>
</Window>
